<resources>
    <!-- Base application theme. -->
    <style name="Theme.RouteMe" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="search_edit_text">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">#A8A8AA</item>
        <item name="android:textColor">#040B3A</item>
        <item name="android:background">@drawable/search_edit_text</item>
    </style>
</resources>